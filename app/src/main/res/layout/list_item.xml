<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_height"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            style="@style/details_text_field.list_title"
            android:layout_marginBottom="@dimen/half"
            android:layout_marginTop="@dimen/quarter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/quarter"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantity"
                style="@style/editor_edit_text.values"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/price"
                style="@style/editor_edit_text.values"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/sale_button"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:contentDescription="@string/sale_button"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/shopping_trolley" />

</LinearLayout>